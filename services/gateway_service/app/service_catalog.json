{
  "gateway_config": {
    "circuit_breaker_threshold": 5,
    "circuit_breaker_timeout_seconds": 30,
    "health_check_interval_seconds": 60
  },
  "services": {
    "auth_service": {
      "service_name": "auth_service",
      "base_path": "/gateway/auth",
      "internal_url": "http://auth_service:8001",
      "healthcheck_endpoint": "/health",
      "timeout_ms": 5000,
      "tenant_scope": "tenant",
      "cacheable": false,
      "retry_policy": {
        "max_retries": 3,
        "backoff_ms": 1000
      },
      "rbac_required": true,
      "rate_limit": {
        "requests_per_minute": 100
      }
    },
    "analytics_service": {
      "service_name": "analytics_service",
      "base_path": "/gateway/analytics",
      "internal_url": "http://analytics_service:8000",
      "healthcheck_endpoint": "/health",
      "timeout_ms": 10000,
      "tenant_scope": "tenant",
      "cacheable": true,
      "retry_policy": {
        "max_retries": 2,
        "backoff_ms": 2000
      },
      "rbac_required": true,
      "rate_limit": {
        "requests_per_minute": 50
      }
    },
    "gateway_service": {
      "service_name": "gateway_service",
      "base_path": "/gateway",
      "internal_url": "http://gateway_service:8080",
      "healthcheck_endpoint": "/health",
      "timeout_ms": 3000,
      "tenant_scope": "global",
      "cacheable": false,
      "retry_policy": {
        "max_retries": 1,
        "backoff_ms": 500
      },
      "rbac_required": false,
      "rate_limit": {
        "requests_per_minute": 200
      }
    }
  }
} 